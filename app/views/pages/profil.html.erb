<div class="profile-container">
  <div class="profile-hero-section">
    <h2>My Profile</h2>
    <p>Manage your account and preferences</p>
  </div>

  <div class="profile-content">
    <div class="profile-main-card">
      <div class="profile-header">
        <div class="profile-avatar">
          <%# <% if @user.photo.attached? %>
            <%# <%= image_tag @user.photo, alt: "Profile picture", class: "avatar-image" %>
          <%# <% else %>
            <%# <div class="avatar-placeholder">
              <%= @user.name.first.upcase %>
            <%# </div>
          <% end %>
        </div>

        <h2 class="profile-name"><%= @user.name %></h2>
        <p class="profile-email"><%= @user.email %></p>
      </div>

      <div class="profile-info-grid">
        <div class="profile-info-card">
          <div class="profile-info-label">Diet Preference</div>
          <div class="profile-info-value <%= 'empty' unless @user.diet.present? %>">
            <%= @user.diet.presence || "No diet specified" %>
          </div>
        </div>

        <div class="profile-info-card">
          <div class="profile-info-label">Allergies</div>
          <div class="profile-info-value <%= 'empty' unless @user.allergies.present? %>">
            <%= @user.allergies.presence || "No allergies specified" %>
          </div>
        </div>
      </div>

      <div class="profile-actions">
        <%= link_to "#", class: "profile-btn-primary" do %>
          Edit Profile
        <% end %>
      </div>
    </div>
  </div>

  <div class="bottom">
    <h3>Ready to cook something delicious?</h3>
    <%= link_to "Browse Recipes", recipes_path, class: "highlight-link" %>
  </div>
</div>
